<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_marginTop="@dimen/distance_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/icon"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <LinearLayout
        android:paddingLeft="@dimen/distance_16"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Galaxy S7"
            android:layout_weight="1"
            android:maxLines="1"
            android:id="@+id/txt_name_device"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/main_color_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_mac_item"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="00:00:00:00:00"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/main_color_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_status"
        android:textColor="#797979"
        android:textSize="@dimen/textsize_14"
        android:text="Paired"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>