<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_theme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="com_accountkit_primary_color">#37474f</item>
        <item name="com_accountkit_primary_text_color">@android:color/white</item>
        <item name="com_accountkit_secondary_color">#eef6ff</item>
        <item name="com_accountkit_secondary_text_color">#37474f</item>
        <item name="com_accountkit_status_bar_color">#37474f</item>
        <item name="com_accountkit_button_disabled_border_color">#37474f</item>
        <item name="com_accountkit_button_disabled_text_color">#37474f</item>
        <item name="com_accountkit_button_pressed_border_color">#37474f</item>
        <item name="com_accountkit_input_accent_color">#37474f</item>
        <item name="com_accountkit_input_background_color">?attr/com_accountkit_background_color</item>
        <item name="com_accountkit_input_border_color">#37474f</item>

    </style>

    <style name="Widget"/>

    <style name="Widget.TextInputLayout">
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
    </style>

    <style name="Widget.TextEdit">
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:textColorHighlight">@color/color_text_highlight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:background">@drawable/state</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="Widget.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
